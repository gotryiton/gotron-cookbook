# this file is managed by Chef, changes will be overwritten

server{
    listen 80 <%= @default %>;
    server_name <%= @server_names %>;
    root <%= @root_path %>;
    index index.php;

    access_log  syslog:notice <%= @log_format %>;
    error_log syslog:error;

    location / { 
        <% if @lockdown %>
        auth_basic            "Restricted";
        auth_basic_user_file  /etc/nginx/access_standard;
        <% end %>
        try_files $uri $uri/ @rewrites;
    }
    
    <% if @lockdown %>
    location /rest/v3/auth {
        auth_basic off;
        try_files $uri $uri/ @rewrites;
    }
    
    location ^~ /invite {
        auth_basic off;
        try_files $uri $uri/ @rewrites;
    }
    
    location ^~ /tracker {
        auth_basic off;
        try_files $uri $uri/ @rewrites;
    }

    location ^~ /iphone/rec {
        auth_basic off;
        try_files $uri $uri/ @rewrites;
    }

    location ^~ /rest/v4/auth {
        auth_basic off;
        try_files $uri $uri/ @rewrites;
    }
    
    location ^~ /rest/v4/products {
        auth_basic off;
        try_files $uri $uri/ @rewrites;
    }

    location ^~ /rest/email/upload {
        auth_basic off;
        try_files $uri $uri/ @rewrites;
    }

    location ^~ /cleanup/clear_cache{
        auth_basic off;
        try_files $uri $uri/ @rewrites;
    }
    <% end%>
    
    location ^~ /manage/ {
      try_files $uri $uri/ @rewrites;
      auth_basic            "Restricted";
      auth_basic_user_file  /etc/nginx/access_standard;
      
      location ~ \.php$ {
        include php.conf;
      }
    }

    location ^~ /amfphp/browser {
      try_files $uri $uri/ @rewrites;
      auth_basic            "Restricted";
      auth_basic_user_file  /etc/nginx/access_dev;
      
      location ~ \.php$ {
        include php.conf;
      }
    }

    location ^~ /testing/ {
      try_files $uri $uri/ @rewrites;
      auth_basic            "Restricted";
      auth_basic_user_file  /etc/nginx/access_dev;
      
      location ~ \.php$ {  
        include php.conf;
      }
    }

    location ~* \.(?:ico|css|js|gif|jpe?g|png)$ {
        expires max;
        add_header Pragma public;
        add_header Cache-Control "public, must-revalidate, proxy-revalidate";
    }

    location @rewrites {
        rewrite ^ /index.php last;
    }  	

    location ~ \.php$ {
        include php.conf;
    }
}
